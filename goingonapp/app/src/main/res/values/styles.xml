<resources
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@color/myWhite</item>
        <item name="editTextColor">@color/myWhite</item>
        <item name="android:textColor">#FFFFCC</item>
        <item name="android:textColorHint">#FFFFCC</item>
        <item name="android:divider">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="colorPrimaryDark">@color/myBlue</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue</item>

        <!-- Support library compatibility -->
        <item name="background">@color/blue</item>
    </style>

    <style name="MyBackground">
        <item name="android:background">@color/myBlue</item>
        <!-- Support library compatibility -->
        <item name="background">@color/myBlue</item>
    </style>
</resources>
